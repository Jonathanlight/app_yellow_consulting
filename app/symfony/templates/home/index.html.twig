{% extends 'base.html.twig' %}

{% import 'component/macro/star_rating.html.twig' as macros %}
{% import 'component/macro/dialog.html.twig' as dialogMacros %}

{% block title %}We Movies{% endblock %}

{% block body %}
    <nav>
        <ul>
            <li>
                <u><h1>A propos de We Movies</h1></u>
            </li>
        </ul>
        <ul>
            <li class="grid">
                <input type="text" class="col" id="dark" name="search" placeholder="search">
                <input type="button" class="col" value="Ok"/>
            </li>
        </ul>
    </nav>

    <div class="container">
        {% for movie in movies %}
            <div class="grid">
                <div class="col-4">
                    <img src="{{ path_image_tmdb ~ movie.poster_path }}" width="250" alt="{{ movie.title }}" class="img-responsive">
                </div>

                <div class="col-8">
                    <h3>{{ movie.title }}</h3>
                    {{ macros.star_rating(movie.vote_average // 2) }}
                    <p><strong>Release Date: </strong>{{ movie.release_date|date('d/m/Y') }} - VÃ´te {{ movie.vote_count }}</p>
                    <p>
                        {{ movie.overview }}
                    </p>

                    {% set videoUrl = getLinkToVideo(movie.id) %}

                    {% if videoUrl %}
                        {{ dialogMacros.dialog(movie.id, getLinkToVideo(movie.id)) }}
                    {% endif %}

                    <details>
                        <p>{{ movie.overview }}</p>
                    </details>
                </div>
            </div>
            <hr>
        {% endfor %}
    </div>
{% endblock %}
